{
  "gitleaks": {
    "image": "zricethezav/gitleaks:latest",
    "command": "gitleaks detect -v --source=. --report-format=sarif --report-path=gitleaks.sarif",
    "report_file": "gitleaks.sarif"
  },
  "trivy": {
    "image": "aquasec/trivy:latest",
    "command": "trivy fs . --format sarif --output trivy.sarif",
    "report_file": "trivy.sarif"
  },
  "semgrep": {
    "image": "semgrep/semgrep:latest",
    "command": "semgrep scan --config=p/default --sarif --output=semgrep.sarif /app",
    "report_file": "semgrep.sarif"
  },
  "kics": {
    "image": "checkmarx/kics:latest",
    "command": "kics scan -p /app -o /app --output-name kics.sarif --report-formats sarif --ignore-on-exit all",
    "report_file": "kics.sarif"
  },
  "checkov": {
    "image": "bridgecrew/checkov:latest",
    "command": "checkov -d /app --output sarif --output-file-path /app",
    "report_file": "results_sarif.sarif"
  }
}